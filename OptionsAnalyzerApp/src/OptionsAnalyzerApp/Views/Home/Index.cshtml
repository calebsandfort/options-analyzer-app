@model OptionsLayout

@{ ViewData["Title"] = "Home"; }

<form class="form-horizontal" role="form" style="padding-top: 10px;">
    <div class="form-group">
        <label class="col-sm-2 control-label" style="text-align: left;" for="expectedPriceChangeSlider">Price Target</label>
        <div class="col-sm-10">
            <input type="text"
                   id="expectedPriceChangeSlider"
                   style="width: 400px"
                   data-provide="slider"
                   data-slider-min="10"
                   data-slider-max="200"
                   data-slider-step="5"
                   data-slider-value="@(Model.TradingAccount.ExpectedPriceChange * 100)" />
            &nbsp;&nbsp;
            @Model.TradingAccount.ExpectedPriceChange.ToString("C")
        </div>
    </div>
    <div class="form-group" style="margin-bottom: 10px;">
        <label class="col-sm-2 control-label" style="text-align: left;">Underlying Price</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.Puts[0].UnderlyingPrice.ToString("C")</p>
        </div>
    </div>
</form>

@if (Model.Puts.Count() > 0)
{
    <div class="row">
        <div class="col-xs-12 block-header block-header-danger block-header-white">
            <h2 style="margin: 20px 0;">
                <span class="title">Puts</span><span class="decoration"></span><span class="decoration"></span><span class="decoration"></span>
            </h2>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            @Html.Partial("_OptionsTable", Model.Puts)
        </div>
    </div>
}

@if (Model.Calls.Count() > 0)
{
<div class="row">
    <div class="col-xs-12 block-header block-header-success block-header-white">
        <h2 style="margin: 20px 0;">
            <span class="title">Calls</span><span class="decoration"></span><span class="decoration"></span><span class="decoration"></span>
        </h2>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @Html.Partial("_OptionsTable", Model.Calls)
    </div>
</div>
}
