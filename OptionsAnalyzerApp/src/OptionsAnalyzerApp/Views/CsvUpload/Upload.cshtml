@model OptionsAnalyzerApp.Models.CsvUpload

@{
    ViewData["Title"] = "CSV Upload";
}

<h2>Create</h2>

<form asp-action="Upload">
    <div class="form-horizontal">
        <h4>CSV Upload</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Contents" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Contents" class="form-control" rows="25" style="resize:none;"></textarea>
                <span asp-validation-for="Contents" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Upload" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>